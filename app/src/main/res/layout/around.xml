<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/around">
        <ImageButton
            android:id="@+id/quietButton"
            android:layout_marginTop="90sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quiet_states"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/middleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/middle_states"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/noisytButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noisy_states"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/exit2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exit2_states"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@null"
            />

        </TableLayout>
</LinearLayout>